{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": ["./packages/supabase/src/types/database.types.ts"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": true,
      "correctness": {
        "noUndeclaredDependencies": "off",
        "noNodejsModules": "off"
      },
      "a11y": {
        "useAnchorContent": "warn"
      },
      "style": {
        "noDefaultExport": "off",
        "useNamingConvention": "off",
        "noNamespaceImport": "off"
      },
      "suspicious": {
        "noReactSpecificProps": "off",
        "noConsole": "off",
        "noConsoleLog": "off"
      }
    }
  }
}
